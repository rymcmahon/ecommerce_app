<h1>Add New Product</h1>

<%= form_tag '/submit_product' do %>
	<%= label_tag :title %>
		<%= text_field_tag :title %>
	<%= label_tag :price %>
		<%= text_field_tag :price %>
	<%= label_tag :description%>
		<%= text_field_tag :description %>
	<%= label_tag :image %>
		<%= text_field_tag :image %>
	<%= label_tag :category %>
		<%= text_field_tag :category %>
	<%= label_tag :brand %>
		<%= text_field_tag :brand %>
<%= submit_tag "Add Product"%>
<% end %>